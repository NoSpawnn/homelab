variant: fcos
version: 1.6.0

ignition:
  config:
    merge:
      - local: common/users.ign
      - local: common/timezone.ign
      - local: common/autorebase.ign
      - local: common/k3s-cluster-init.ign

storage:
  files:
    - path: /etc/hostname
      mode: 0644
      overwrite: true
      contents:
        inline: twinkpad

    - path: /etc/vconsole.conf
      mode: 0644
      contents:
        inline: KEYMAP=uk
